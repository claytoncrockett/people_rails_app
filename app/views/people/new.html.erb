<h1>New Person</h1>
<%= form_for @person do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>

  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>

  <%= f.label :gender %>
  <%= f.text_field :gender %>

  <%= f.label :alive %>
  <%= f.select(:alive, options_for_select([['True', true], ['False', false]], @person.alive))%>

  <%= f.label :catchphrase %>
  <%= f.text_area :catchphrase %>

  <%= f.submit %>
<% end %>